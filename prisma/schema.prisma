datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model usuarios {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  cpf         String   @unique
  status      String   @default("ativo")
  data_criacao DateTime @default(now())
  livros      livro[] @relation("UsuarioLivros")
}

model livro {
  id           Int      @id @default(autoincrement())
  titulo       String
  id_autor     Int
  genero       String?
  quantidade   Int      @default(0)
  data_criacao DateTime @default(now())
  autor        String  
  usuarios     usuarios[] @relation("UsuarioLivros")
  autor_rel    autor     @relation(fields: [id_autor], references: [id])
}

model autor {
  id           Int      @id @default(autoincrement())
  nome         String   @unique
  livros       livro[]
}